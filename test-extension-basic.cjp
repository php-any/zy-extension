// 变量声明
var message = "Hello, Origami Language!";
var number = 42;
var flag = true;

// 函数定义
function greet(name) {
    return "Hello, " + name + "!";
}

// 控制结构
if (number > 0) {
    print("Positive number: " + number);
} else {
    print("Non-positive number");
}

// 循环
for (var i = 0; i < 3; i++) {
    print("Iteration: " + i);
}

// 函数调用
var greeting = greet("World");
print(greeting);

