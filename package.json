{
  "name": "origami-language",
  "displayName": "Origami Language Support",
  "description": "折言(origami-lang) 语言支持 - 融合 PHP 与 Go 特性的创新脚本语言",
  "version": "0.0.1",
  "publisher": "origami-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/origami-vscode-extension"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "origami",
    "折言",
    "php",
    "go",
    "scripting",
    "concurrent"
  ],
  "activationEvents": [
    "onLanguage:origami"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "origami",
        "aliases": [
          "Origami",
          "origami",
          "折言"
        ],
        "extensions": [
          ".ori",
          ".cjp"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/origami-light.svg",
          "dark": "./icons/origami-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "origami",
        "scopeName": "source.origami",
        "path": "./syntaxes/origami.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Origami Language Server",
      "properties": {
        "origami.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用/禁用 Origami 语言服务器（固定连接到 localhost:8800）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
